# DePIN-Orcha Configuration
# Copy this file to .env and adjust values as needed

# ============================================
# API Server Configuration
# ============================================
API_HOST=127.0.0.1
API_PORT=8080
API_WORKERS=4
API_REQUEST_TIMEOUT=30

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=depin_orcha.db
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=2
DB_CONNECT_TIMEOUT=5

# ============================================
# Logging Configuration
# ============================================
# Options: trace, debug, info, warn, error
LOG_LEVEL=info
RUST_LOG=depin_orcha=info,actix_web=info,sqlx=warn

# ============================================
# Scheduler Configuration
# ============================================
# Optimization runs every N seconds
OPTIMIZATION_INTERVAL=300
# Metrics cleanup: remove records older than N days
METRICS_RETENTION_DAYS=30
# Alert processing interval in seconds
ALERT_PROCESSING_INTERVAL=60

# ============================================
# Performance Tuning
# ============================================
# Reallocation threshold (minimum earnings improvement %)
MIN_REALLOCATION_THRESHOLD=5.0
# CPU usage threshold for alerts (%)
CPU_ALERT_THRESHOLD=90.0
# Memory usage threshold for alerts (%)
MEMORY_ALERT_THRESHOLD=85.0

# ============================================
# Security & Authentication (Phase 5)
# ============================================
# API Key Authentication
# Generate new API keys using /api/v1/admin/keys endpoint
# Default development key: dpn_admin_dev_key_12345 (REPLACE IN PRODUCTION!)

# Rate limiting (requests per minute per API key)
DEFAULT_RATE_LIMIT=60
RATE_LIMIT_WINDOW_SECONDS=60

# JWT Configuration (future enhancement)
# JWT_SECRET=generate-with-openssl-rand-hex-32
# JWT_EXPIRATION_SECONDS=3600

# API Key Settings
API_KEY_MIN_LENGTH=32
API_KEY_DEFAULT_EXPIRY_DAYS=90
