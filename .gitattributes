# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Rust
*.rs text eol=lf
Cargo.toml text eol=lf
Cargo.lock text eol=lf

# Python
*.py text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf
*.pyc binary
*.pyo binary
*.egg-info/** text merge=union eol=lf

# Node
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
package-lock.json text merge=union

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.otf binary
*.db binary
*.sqlite binary
